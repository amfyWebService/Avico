@model AvicoApp.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Hotel</h4>
    <hr />
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img class="d-block w-100" src="@Model.PictureUrl" alt="First slide">
            </div>
        </div>
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HowManyHotelRoomsAvailableToday)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HowManyHotelRoomsAvailableToday)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvgGrade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvgGrade)
        </dd>
    </dl>
</div>
<div>
        <div class="btn-group" role="group">
      <button type="button" class="btn btn-secondary" data-toggle="collapse" data-target="#collapseHotel" aria-expanded="false" aria-controls="collapseExample"> Book</button>
    </div>
    <div class="collapse" id="collapseHotel">
      <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputFirstNamme">First Name</label>
              <input type="text" class="form-control" id="inputFirstNamme" placeholder="First Name">
            </div>
            <div class="form-group col-md-6">
              <label for="inputName">Name</label>
              <input type="text" class="form-control" id="inputName" placeholder="Name">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="mareservation@avico.com">
          </div>
          <div class="form-group">
            <label for="inputPhone">Phone</label>
            <input type="phone" class="form-control" id="inputAddress2" placeholder="0606 0606 0606">
          </div>
          <div class="form-group">
            <label for="inputPhone">Number of room</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="" width="230">
          </div>
          <div class=form-row>
          <div class="form-group col-md-6">
            <label for="inputDate">At</label>
            <input id="datepicker1" type="text" class="form-control" placeholder="MM/DD/YYYY" width="276">
          </div>
          <div class="form-group col-md-6">
            <label for="inputDate">To</label>
            <input id="datepicker" type="text" class="form-control" placeholder="MM/DD/YYYY" width="276">
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      </form>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
<script type="text/javascript">
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
        $('#datepicker1').datepicker({
            uiLibrary: 'bootstrap4'
        });
</script>