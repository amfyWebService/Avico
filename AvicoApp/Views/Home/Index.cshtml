@model IEnumerable<AvicoApp.Models.Hotel>

@{
    ViewData["Title"] = "Home Page";
}

<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Avico, le voyage commence ici &#x1F680;</h1>
            <p class="lead text-muted">
               La Société Avico est une société spécialisée dans les conseils 
               touristiques émanant de consommateurs sur les hôtels 
               et restaurants ainsi que sur la réservation de chambres d’hôtels.
            </p>
            <p>
                <a href="#" class="btn btn-success my-2">Réserver</a>
                <a href="#" class="btn btn-secondary my-2">En savoir plus</a>
            </p>
        </div>
    </section>
@foreach (var item in Model) {
  var imgPath = item.PictureUrl;
  if(imgPath == "") {
    imgPath = "data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22288%22%20height%3D%22226%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20288%20226%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_167ace958b8%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_167ace958b8%22%3E%3Crect%20width%3D%22288%22%20height%3D%22226%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2296.828125%22%20y%3D%22119.2390625%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E";
  }
    <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@item.ID" class="descriptionCard">
                <img class="card-img-top" alt="@item.Name" style="height: 225px; width: 100%; display: block;" src="@imgPath" data-holder-rendered="true">
                <div class="card-body">
                  <h5>@item.Name</h5>
                  <p class="card-text">
                  @Html.DisplayFor(modelItem => item.Description)
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <div class="text-warning">
		                    <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
		                </div>
                    </div>
                  </div>
                </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
}
</main>


